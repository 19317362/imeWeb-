{{! 右上侧收藏栏 }}
{{#each this}}
	<div class='mt-comment favorite-item' oid='{{oid}}'>
		<div class='mt-comment-img'>
			<!-- <i class='iconfont icon-cnshu'></i> -->
			<i class='iconfont icon-{{FavoriteItemsShowIcon fileType}}'></i>
		</div>
		<div class='mt-comment-body'>
			<div class='mt-comment-info'>
				<span class='mt-comment-content'>{{showNotNull name number}}</span>
				<span class='mt-comment-date'>{{createdDate}}</span>
			</div>
			<!-- <div class='mt-comment-text'>
				备注XXXXXXXXXXXXXXXXXX
			</div> -->
			<div class='mt-comment-details'>
				<span class='mt-comment-status mt-comment-status-approved'>定稿</span>
				<ul class='mt-comment-actions'>
					<li><a class="favorite-edit">编辑</a></li>
					<li><a class="favorite-show">查看</a></li>
					<li><a class="favorite-cancel">取消收藏</a></li>
				</ul>
			</div>
		</div>
	</div>
{{/each}}

