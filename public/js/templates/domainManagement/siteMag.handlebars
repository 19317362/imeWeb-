{{! home页面容器 }}
{{#each this}}
    <div class="page-content page-content-base">
        {{! 面包屑导航 }}
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="index.html"><font key="i18n.homePage"></font></a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span class="active"><font key="i18n.manageTool"></font></span>
            </li>
        </ul>

        <div class="row">
            <div class="col-lg-12 col-xs-12 col-sm-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-settings font-green"></i>
                            <span class="caption-subject font-dark bold uppercase"><font key="i18n.manageTool"></font></span>
                        </div>
                        <!--四个按钮-->
                        <div class="actions">
                            <div class="btn-group btn-group-devided " data-toggle="buttons">

                                <label id="siteMag_addData"
                                       class="btn btn-transparent green btn-outline btn-circle btn-sm margin-right-25">
                                    <input type="radio" name="options" class="toggle"> <font key="i18n.addSite"></font></label>
                                <label id="siteMag_editBtn"
                                       class="btn btn-transparent green btn-outline btn-circle btn-sm  margin-right-25 ">
                                    <input type="radio" name="options" class="toggle" id="option3"><font key="i18n.modifySite"></font></label>
                                <label id="siteMag_disableBtn"
                                       class="btn btn-transparent green btn-outline btn-circle btn-sm  margin-right-25 ">
                                    <input type="radio" name="options" class="toggle" id="option3"><font key="i18n.discardSite"></font></label>
                                <label id="siteMag_saveData"
                                       class="btn btn-transparent green btn-outline btn-circle btn-sm margin-right-25">
                                    <input type="radio" name="options" class="toggle"> <font key="i18n.SAVE"></font></label>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div id="siteMag_gAlert" class="col-md-12"></div>
                                <!--主表格-->
                                <div id="siteMag_mainTable_loadding" style="min-height: 350px;">
                                    <table class="table table-striped table-bordered table-hover table-checkable order-column"
                                           id="siteMag_mainTable">
                                        <thead>
                                        <tr class="bg-green">
                                            <th><font key="i18n.id"></font></th>
                                            <th><font key="i18n.name"></font></th>
                                            <th><font key="i18n.description"></font></th>
                                            <th><font key="i18n.type"></font></th>
                                            <th><font key="i18n.status"></font></th>
                                        </tr>
                                        </thead>
                                        <tbody id="siteMag_dataBox">

                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{{/each}}